<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#765B38"
    tools:context=".ActivityHome">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="WISATA INDONESIA "
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="serif"
            android:textColor="#EFE4E4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="BALI"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:fontFamily="serif"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bali">
                </ImageView>

                <Button
                    android:id="@+id/btnwisata1"
                    android:text="selengkapnya"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:backgroundTint="#6D4013"
                    android:layout_marginTop="5pt"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="SUMATERA BARAT"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:fontFamily="serif"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sumbar">
                </ImageView>

                <Button
                    android:id="@+id/btnwisata2"
                    android:text="selengkapnya"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:backgroundTint="#6D4013"
                    android:layout_marginTop="5pt"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="PAPUA"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:fontFamily="serif"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/papua">

                </ImageView>

                <Button
                    android:id="@+id/btnwisata3"
                    android:text="selengkapnya"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:backgroundTint="#6D4013"
                    android:layout_marginTop="5pt"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="SUMATERA UTARA"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:fontFamily="serif"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sumut">
                </ImageView>

                <Button
                    android:id="@+id/btnwisata4"
                    android:text="selengkapnya"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:backgroundTint="#6D4013"
                    android:layout_marginTop="5pt"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="SULAWESI BARAT"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:fontFamily="serif"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sulbar">
                </ImageView>

                <Button
                    android:id="@+id/btnwisata5"
                    android:text="selengkapnya"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:backgroundTint="#6D4013"
                    android:layout_marginTop="5pt"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>